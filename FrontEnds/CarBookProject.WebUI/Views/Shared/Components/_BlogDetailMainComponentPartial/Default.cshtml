@model GetBlogByIdDto
<div class="col-md-8 ftco-animate">
    <h2 class="mb-3">@Model.BlogTitle</h2>
    <p>@Model.Description</p>
    <p>
        <img src="@Model.CoverImageUrl" alt="" class="img-fluid">
    </p>
    @await Component.InvokeAsync("_BlogDetailCloudTagByBlogComponentPartial")
    @await Component.InvokeAsync("_BlogDetailAuthorAboutComponentPartial")
    <div class="pt-5 mt-5">
        <h3 class="mb-5">6 Comments</h3>
        @await Component.InvokeAsync("_CommentListByBlogComponentPartial")
        @await Component.InvokeAsync("_AddCommentComponentPartial")
    </div>
</div>